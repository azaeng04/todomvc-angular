{
  "name": "todomvc-angular",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blacksonic/todomvc-angular.git"
  },
  "scripts": {
    "build": "ng build --configuration=production",
    "format": "prettier --write 'src/**/*.ts'",
    "start": "ng serve",
    "test": "npm run test:unit",
