    "@angular/compiler-cli": "^16.2.4",
    "@angular/language-service": "^16.2.4",
    "@types/node": "^18.19.3",
    "@types/uuid": "~8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.39.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.7.0",
    "typescript": "~4.9.5"
  }
}