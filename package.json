{
  "name": "todomvc-angular",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blacksonic/todomvc-angular.git"
  },
  "main": "src/main.ts",
  "scripts": {
    "build": "ng build --configuration=production",
    "format": "prettier --write 'src/**/*.ts'",
    "start": "ng serve",
    "test": "npm run test:unit",
    "test:unit": "ng test --no-watch",
    "test:e2e": "start-server-and-test start http-get://localhost:9100 e2e",
    "lint": "ng lint",
    "e2e": "cypress run --config-file cypress.json"
  },
  "dependencies": {
    "@angular/animations": "^16.2.4",
    "@angular/common": "^16.2.4",
    "@angular/compiler": "^16.2.4",
    "@angular/core": "^16.2.4",
    "@angular/forms": "^16.2.4",
    "@angular/platform-browser": "^16.2.4",
    "@angular/platform-browser-dynamic": "^16.2.4",
    "@angular/router": "^16.2.4",
    "@ngrx/store": "^16.2.0",
    "@ngrx/store-devtools": "^16.2.0",
    "rxjs": "~7.5.5",
    "todomvc-app-css": "~2.4.2",
    "uuid": "~8.3.2",
    "zone.js": "~0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.2.1",
    "@angular-eslint/builder": "16.1.2",
