    "@angular/compiler-cli": "^14.3.0",
    "@angular/language-service": "^14.3.0",
    "@types/node": "^17.0.25",
    "@types/uuid": "~8.3.4",
    "@typescript-eslint/eslint-plugin": "5.20.0",
    "@typescript-eslint/parser": "5.20.0",
    "eslint": "^8.12.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.6.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.3"
  }
}